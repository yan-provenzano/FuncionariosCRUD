<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

@model FuncionariosCRUD.Models.FuncionariosModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Dados do Funcionário</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstadoCivil)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EstadoCivil)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CTPS)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CTPS)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataContratacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataContratacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cargo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cargo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FotoFuncionario)
            </dt>
            <dd class="col-sm-10">
                <img src="@FileLocation.RetriveFileFromFolder@Model.FotoFuncionario" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>

        <div style=" text-align: end;">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white"><i class="bi bi-pencil-fill" style="color:white"></i> Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn  btn-danger"><i class="bi bi-trash-fill" style="color:white"></i> Excluir</a>
            <a asp-action="Index" class="btn  btn-primary"><i class="bi bi-skip-backward-fill" style="color:white"></i> Voltar para lista</a>
        </div>
    </div>
</div>


