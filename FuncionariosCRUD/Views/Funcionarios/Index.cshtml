<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

@model IEnumerable<FuncionariosCRUD.Models.FuncionariosModel>

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-2"><h1>Funcionários</h1></div>
    <div class="col-2"></div>
    <div class="col-2"></div>
    <div class="col-2"></div>

    <div class="col-2">
        <a asp-action="Create" class="btn btn-primary" style="margin-top:15px; width:100%"><i class="bi bi-person-fill-add"></i>  Cadastrar Novo</a>
    </div>

    <div class="col-2"> 
        <a asp-action="Relatorio" class="btn btn-primary" style="margin-top:15px;  width:100%"><i class="bi bi-card-list"></i>  Lista Completa</a>
    </div>
</div>

<div><br/></div>
<div><br /></div>
<div><br /></div>

<div class="row gy-3">
    @foreach (var item in Model)
    {

        <div class="col-lg-4 mb-3 d-flex align-items-stretch mx-auto">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top " src="~/Uploads/@item.FotoFuncionario" asp-append-version="true" alt="@item.Nome" style="width: 100%; height: 15vw; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title text-center" style="margin-bottom:10px">@item.Nome</h5>
                    <h6 class="card-title text-center" style="margin-bottom:60px">@item.Cargo</h6>
                    <div class="text-center">
                        <a asp-controller="Funcionarios" asp-action="Details" asp-route-id="@item.Id" class=" btn btn-primary  translate-middle" style="position:absolute ;bottom: 10px;">Detalhe</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>