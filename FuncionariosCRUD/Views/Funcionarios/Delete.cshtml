<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

@model FuncionariosCRUD.ViewModels.FuncionariosViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza que quer excluir este funcionário?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CTPS)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CTPS)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataContratacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataContratacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemFuncionario)
        </dt>
            <dd class="col-sm-10">
                <img src="@FileLocation.RetriveFileFromFolder@Model.ExisteFoto" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /><i class="bi bi-trash-fill" style="color:white"></i>
            <a asp-action="Index" class="btn btn-primary"><i class="bi bi-skip-backward-fill" style="color:white"></i> Voltar para lista</a>
    </form>
</div>
